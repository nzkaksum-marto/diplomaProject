@model List<MusicShop.Models.ShoppingCart.ShoppingCartIndexVM>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Discount (%)</th>
                    <th>Quantity</th>
                    <th>Stock</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Discount%</td>
                        <td>@item.Quantity</td>
                        <td>@item.QuantityInStock</td>
                        <td>@item.Total.ToString("F2")</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="mt-3">Grand Total: @Model.Sum(i => i.Total).ToString("F2")</h4>

        <a asp-action="ClearCart" class="btn btn-warning">
            <i class="fas fa-times"></i> Clear Cart
        </a>
    }
    else
    {
        <p class="alert alert-info">Your cart is empty.</p>
    }
</div>
