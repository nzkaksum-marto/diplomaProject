@model List<MusicShop.Models.ShoppingCart.ShoppingCartIndexVM>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>

    @if (Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Discount (%)</th>
                    <th>Quantity</th>
                    <th>Stock</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Discount%</td>
                        <td>@item.Quantity</td>
                        <td>@item.QuantityInStock</td>
                        <td>@item.Total.ToString("F2")</td>
                        <td>
                            <form asp-controller="ShoppingCart" asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="cartItemId" value="@item.Id"/>
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="mt-3">Grand Total: @Model.Sum(i => i.Total).ToString("F2")</h4>

        <form asp-controller="ShoppingCart" asp-action="PlaceOrder" method="post">
           
            <button type="submit" class="btn btn-danger">Place order</button>
        </form>
    }
    else
    {
        <p class="alert alert-info">Your cart is empty.</p>
    }
</div>
